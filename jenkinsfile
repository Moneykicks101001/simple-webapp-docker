pipeline {
    agent any

    stages {

        stage('Append Route') {
            steps {
                script {
                    // Execute the shell script to append the route
                    sh 'chmod +x append.sh'
                    sh './append.sh'
                }
            }
        }

        stage('Show app.py file') {
            steps {
                script {
                    // Execute the shell script to append the route
                    sh 'cat app.py'
                }
            }
        }
    }
}
